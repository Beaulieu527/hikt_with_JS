<% if @review.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@review.errors.count, "error") %>
      prohibited this review from being saved:
    </h2>
 
    <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%=form_for @hike.reviews.build, url: hike_reviews_path(@hike), html: {id: @hike.id} do |f|%>
            <div class= "field">
                <%=f.label :content%>
                <%= f.text_field :content, class: "form-control", required: "required" %>
            </div>
            <br>
            <div class= "actions">
                <%=f.submit%>
            <div>
        <%end %>
